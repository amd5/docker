# Base Image
FROM python:2.7

# Author
MAINTAINER c32 amd5@qq.com

# Add to docker and Unpacking
ADD https://github.com/sqlmapproject/sqlmap/tarball/master /
RUN tar -zxvf master
RUN mv sqlmap* sqlmap
RUN chmod 777 /usr/bin
RUN mv sqlmap /usr/bin/
RUN python /usr/bin/sqlmap/sqlmap.py --version
RUN echo "alias sqlmap='python /usr/bin/sqlmap/sqlmap.py'">>~/.bashrc


# System variable
#ENV sqlmap /usr/bin/sqlmap/sqlmap.py